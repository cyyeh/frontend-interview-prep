{
  "root": true,
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "parserOptions": {
    "project": "**/tsconfig.json"
  },
  "plugins": ["jest", "@typescript-eslint"],
  "env": {
    "jest/globals": true
  },
  "rules": {
    "no-bitwise": "off",
    "no-lonely-if": "off",
    "class-methods-use-this": "off",
    "arrow-body-style": "off",
    "no-loop-func": "off",
    "no-underscore-dangle": "off"
  }
}
